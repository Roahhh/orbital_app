<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">

    
    <%= link_to "RolePlay", root_path, id: "logo" %>
    <% if logged_in? %>
      <%= link_to current_user do %>
        <div id = "main-logo"> </div>
      <% end %>
      <%= link_to starts_path do %>
        <div id = "map-icon"> </div>
      <% end %>
      <%= link_to "#" do %>
        <div id = "inventory-icon"> </div>
      <% end %>
      <%= link_to "#" do %>
        <div id = "switch-eq-icon"> </div>
      <% end %>
      <%= link_to "#" do %>
        <div id = "money-icon"> </div>
      <% end %>
      <%= link_to towns_path do %>
        <div id = "castle-icon"> </div>
      <% end %>
      
    <% end %>

    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        
        <% if logged_in? %>
          <li><%= link_to "Game", starts_path %></li>
          <% if is_teacher? %>
            <li><%= link_to "Quest Creation", new_quest_path %>
            <li><%= link_to "Users", users_path %></li>
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Tavern <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Message Board", messages_path %></li>
              <li><%= link_to "New Message", new_message_path %></li>
              <li><%= link_to "Chatroom", users_path %></li>
            </ul>
          </li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>

              <% if is_teacher? %>
              <li><%= link_to "Sign Up", signup_path %>
              <% end %>

              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>      
      </ul>
    </nav>
  </div>
</header>