<div class="comment">

	<p class="comment-content"><%= bugcomment.content %></p>
	<p class="comment-posted-by" style="text-align:right">Commented by <%= full_name(bugcomment.user) %> <%= time_ago_in_words(bugcomment.created_at) %> ago</p>

	<div class="links">
		<% if logged_in? %>
		  <% if current_user?(User.find(bugcomment.user_id)) || current_user.admin? %>
		    <%= link_to 'Edit', edit_bugreport_bugcomment_path(bugcomment.bugreport, bugcomment) %>
		    <%= link_to 'Delete', bugreport_bugcomment_path(bugcomment.bugreport, bugcomment), method: :delete,
		                                                                        data: { confirm: "Are you sure that you want to delete this comment?" } %>
		  <% end %>
		<% end %>
	</div>
</div>