<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :identity_no, "ID Number" %>
      <%= f.text_field :identity_no, class: 'form-control', :readonly => !is_teacher? %>

      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, class: 'form-control', :readonly => !is_teacher? %>

      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, class: 'form-control', :readonly => !is_teacher? %>

      <%= f.label :class_no, "Class" %>
      <%= f.text_field :class_no, class: 'form-control', :readonly => !is_teacher? %>

      <%= f.label :year %>
      <%= f.text_field :year, class: 'form-control', :readonly => !is_teacher? %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>